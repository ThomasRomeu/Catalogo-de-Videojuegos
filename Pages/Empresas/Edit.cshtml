@page
@model primerParcial._Pages_Empresas.EditModel

@{
    ViewData["Title"] = "Editar Empresa";
}


<div class="container">
    <h4 class="text-center text-info">Editar la Empresa @Html.DisplayFor(x => x.Empresa.Nombre)</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Empresa.Id" />
                <div class="form-group">
                    <label asp-for="Empresa.Nombre" class="control-label"></label>
                    <input asp-for="Empresa.Nombre" class="form-control" />
                    <span asp-validation-for="Empresa.Nombre" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Empresa.Pais" class="control-label"></label>
                    <input asp-for="Empresa.Pais" class="form-control" />
                    <span asp-validation-for="Empresa.Pais" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Empresa.FechaFundada" class="control-label"></label>
                    <input asp-for="Empresa.FechaFundada" class="form-control" />
                    <span asp-validation-for="Empresa.FechaFundada" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Empresa.SitioWeb" class="control-label"></label>
                    <input asp-for="Empresa.SitioWeb" class="form-control" />
                    <span asp-validation-for="Empresa.SitioWeb" class="text-danger"></span>
                </div>
                <br>
                <div class="form-group">
                    <input type="submit" value="Guardar" class="btn btn-success btn-sm" />
                </div>
                <br>
            </form>
        </div>
    </div>

    <div>
        <a asp-page="./Index" class="Id btn btn-primary btn-sm">Volver al listado</a>
    </div>
</div>
